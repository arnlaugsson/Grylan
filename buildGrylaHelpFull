<project name="GrylaServer" basedir="." default="compile">

    <property name="src.dir"     value="src"/>
    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="lib.dir"     value="lib"/>
    <property name="jar.dir"     value="${build.dir}/jar"/>
    <property name="main-class"  value="is.gryla.core.GrylaHelpful"/>

    <path id="classpath">
        <pathelement location="${src.dir}"/>
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="${build.dir}/classes"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="${jar.dir}"/>
        <copydir src="${lib.dir}" dest="${jar.dir}/${lib.dir}" />
        <jar basedir="${classes.dir}" destfile="${jar.dir}/GrylaHelpful.jar">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
                <attribute name="Class-Path" value="lib/IceNLPCore/dist/IceNLPCore.jar"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="${jar.dir}/GrylaHelpful.jar" fork="true"/>
    </target>


</project>